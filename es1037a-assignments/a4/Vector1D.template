template <class T>
Vector1D<T>& Vector1D<T> :: operator-=(const T& val)
{
    for (unsigned i=0; i<m_width; i++) m_container[i] -= val;
    return (*this);
}

template <class T>
Vector1D<T>& Vector1D<T> :: operator*=(const double& scalar) 
{
    for (unsigned i=0; i<m_width; i++) m_container[i] *= scalar;
    return (*this);
}

