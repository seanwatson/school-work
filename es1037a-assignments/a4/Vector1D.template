{
    if (isEmpty()) trg.resize(getWidth());
    double old_min = (double)getMin();
    double old_max = (double)getMax();
    double gain = 1;
    double bias = (new_min+new_max)/2.0-old_min;
    if (old_min!=old_max) {
        gain = (new_max-new_min)/(old_max-old_min); 
        bias=new_min-old_min*gain;
